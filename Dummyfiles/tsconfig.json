{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": { //Allow for relative file path includes from the following as roots. Lets me include as if I'm relative to these dirs.
      "*": [
        "lib/*",
        "lib/src/*"
      ]
    },
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
